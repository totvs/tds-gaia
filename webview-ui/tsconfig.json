{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2020",
    "useDefineForClassFields": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}